{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noExtraBooleanCast": "error",
				"noUselessConstructor": "error",
				"useFlatMap": "error"
			},
			"correctness": {
				"noUnusedImports": "off",
				"noUnusedVariables": "off"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"useConst": "error",
				"useTemplate": "error"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"noArrayIndexKey": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	}
}
